{
  "framework": "qunit",
  "disable_watching": true,
  "test_page": "test/index.html",
  "src_files": [
    "*.js",
    "test/*.js"
  ],
  "launch_in_ci": [
    "Chrome"
  ],
  "launch_in_dev": [
    "Chrome"
  ],
  "browser_args": {
    "Chrome": {
      "mode": "ci",
      "args": [
        "--disable-gpu",
        "--headless",
        "--remote-debugging-port=0",
        "--window-size=1440,900"
      ]
    }
  }
}
